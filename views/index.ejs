<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1><%= title %></h1>

  <form method="GET" action="/search">
    <input placeholder="Search for users" name="search-input" />
    <button type="submit">Search</button>
  </form>

  <ul class="user-list">
    <% if (locals.users) {%>
    <% users.forEach(user => { %>
    <li class="added-user">ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>, Email: <%=user.email%><% if (user.age) { %>, Age: <%=user.age%><% } %><% if (user.bio) { %>, Bio: <%=user.bio%><% } %></li>

    <div class="actions">
      <a href="/<%=user.id%>/update">Update</a>
      <form action="/<%=user.id%>/delete" method="POST" style="display:inline;">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
      </form>
    </div>

    <% }); %>
    <% } %>
  </ul>
  <a href="/create">Create a user</a>
</body>
</html>