<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>User search</title>
  </head>
  <body>
    <% if (!resultList || resultList.length === 0) {%>
        <p>No users found</p>
    <%} else { %>
    <ul class="results">
        <% resultList.forEach(user => { %>
           <li>ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>, Email: <%=user.email%><% if (user.age) { %>, Age: <%=user.age%><% } %><% if (user.bio) { %>, Bio: <%=user.bio%><% } %></li> 
        <% }) %>
    </ul>
    <% } %>

    <a href="/">Back to home</a>
  </body>
</html>
